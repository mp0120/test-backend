{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest"
    ],
    "jsRules": {},
    "rules": {
        "interface-name": [
            false
        ],
        "no-any": true,
        "no-empty-interface": true,
        "no-var-requires": true,
        "no-console": [
            false,
            "log",
            "error"
        ],
        "no-shadowed-variable": false,
        "no-object-literal-type-assertion": false,
        "no-duplicate-variable": [
            true,
            "check-parameters"
        ],
        "arrow-return-shorthand": [
            true,
            "multiline"
        ],
        "no-submodule-imports": false,
        "object-literal-sort-keys": false,
        "no-bitwise": false,
        "align": [
            true,
            "parameters",
            "arguments",
            "statements",
            "members",
            "elements"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "max-line-length": [
            true,
            120
        ],
        "no-trailing-whitespace": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": []
    }
}
